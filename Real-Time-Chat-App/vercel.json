{
  "version": 2,
  "builds": [
    {
      "src": "server-side/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client-side/vite.config.js",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client-side/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server-side/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "client-side/dist/$1"
    }
  ]
}
